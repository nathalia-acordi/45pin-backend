{
    "compilerOptions": {
        "sourceMap": true,
        "outDir": "dist",
        "module": "commonjs",
        "target": "es5",
        "allowJs": true,
        "checkJs": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "lib": ["esnext"],
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true
    },

    "include": [
        "src//*"
    ],
    "exclude": [
        "node_modules",
        "/*.spec.ts"
    ]
}